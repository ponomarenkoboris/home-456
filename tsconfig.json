{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "module": "commonjs", 
    "moduleResolution": "node", 
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
 
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  }
}